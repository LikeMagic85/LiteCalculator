<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LiteCalculator.Light" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="mainBackground">@drawable/background</item>
        <item name="lineColor">@color/black</item>
        <item name="logoTextColor">@color/black</item>

    </style>
    <style name="Theme.LiteCalculator.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="buttonStyle">@style/ButtonStyleDark</item>
        <item name="mainBackground">@color/black</item>
        <item name="lineColor">@color/white</item>
        <item name="logoTextColor">@color/white</item>
    </style>
</resources>